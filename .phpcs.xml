<?xml version="1.0"?>
<ruleset name="MyPHPpa PHP 8.2 Compatibility Check">
  <description>Validação de compatibilidade com PHP 8.2</description>

  <!-- Alvo da verificação -->
  <config name="testVersion" value="8.2" />

  <!-- Diretórios a analisar -->
  <file>./online</file>

  <!-- Ignorar dependências e outros diretórios irrelevantes -->
  <exclude-pattern>./vendor</exclude-pattern>
  <exclude-pattern>./node_modules</exclude-pattern>

  <!-- Regra do PHPCompatibility -->
  <rule ref="PHPCompatibility" />
</ruleset>
